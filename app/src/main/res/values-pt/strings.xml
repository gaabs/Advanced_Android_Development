<resources xmlns:xliff="http://schemas.android.com/apk/res-auto">

    <!--
         Used in Action Bar, and in AndroidManifest to tell the device the name of this app.
         It's to keep this short, so your launcher icon isn't displayed with "The greatest Wea"
         or something similar.
    -->

    <!--
         By convention, "action" denotes that this String will be used as the label for an Action,
         typically from the action bar.  The ActionBar is limited real estate, so shorter is better.
    -->
    <string name="action_settings">Configurações</string>
    <string name="action_map">Localização no mapa</string>
    <string name="action_share">Compartilhar</string>

    <!-- Menu label to fetch updated weather info from the server -->
    <string name="title_activity_detail">Detalhes</string>
    <string name="title_activity_settings">Configurações</string>

    <!-- Label for the location preference [CHAR LIMIT=30] -->
    <string name="pref_location_label">Localização</string>

    <!-- Strings used when displaying the state of the Location in settings -->
    <string name="pref_location_error_description">Localização inválida (<xliff:g id="location_setting">%1$s</xliff:g>)"</string>
    <string name="pref_location_unknown_description">Validando localização... (<xliff:g id="location_setting">%1$s</xliff:g>)"</string>

    <!-- Strings related to Notification Enabled preference -->
    <string name="pref_enable_notifications_label">Notificações de previsão</string>

    <string name="pref_enable_notifications_true">Habilitado</string>
    <string name="pref_enable_notifications_false">Não habilitado</string>

    <!-- Strings for formatting weather-related data -->

    <!-- Label for the temperature units preference [CHAR LIMIT=30] -->
    <string name="pref_units_label">Unidade de temperatura</string>

    <!-- Label for metric option in temperature unit preference [CHAR LIMIT=25] -->
    <string name="pref_units_label_metric">Métrico</string>

    <!-- Label for imperial option in temperature unit preference [CHAR LIMIT=25] -->
    <string name="pref_units_label_imperial">Imperial</string>

    <!-- Key name for temperature unit preference in SharedPreferences [CHAR LIMIT=NONE] -->

    <!-- Value in SharedPreferences for metric temperature unit option [CHAR LIMIT=NONE] -->

    <!-- Value in SharedPreferences for imperial temperature unit option [CHAR LIMIT=NONE] -->


    <!-- Language-specific constants -->
    <string name="today">Hoje</string>

    <!-- For labelling tomorrow's forecast [CHAR LIMIT=15] -->
    <string name="tomorrow">Amanhã</string>

    <!-- Date format [CHAR LIMIT=NONE] -->
    <string name="format_full_friendly_date"><xliff:g id="month">%1$s</xliff:g>, <xliff:g id="day">%2$s</xliff:g></string>

    <!-- Strings for formatting weather-related data -->
    <!-- Temperature format [CHAR LIMIT=5 -->
    <string name="format_temperature"><xliff:g id="temp">%1.0f</xliff:g>\u00B0</string>

    <!-- Windspeed formats -->
    <!-- Wind in mph [CHAR LIMIT=25] -->
    <string name="format_wind_mph">Vento: <xliff:g id="speed">%1$1.0f</xliff:g> mph <xliff:g id="direction">%2$s</xliff:g></string>
    <!-- Wind in kph [CHAR LIMIT=25] -->
    <string name="format_wind_kmh">Vento: <xliff:g id="speed">%1$1.0f</xliff:g> km/h <xliff:g id="direction">%2$s</xliff:g></string>

    <!-- Pressure format CHAR LIMIT=25] -->
    <string name="format_pressure">Pressão: <xliff:g id="pressure">%1.0f</xliff:g> hPa</string>

    <!-- Humidity format CHAR LIMIT=25]-->
    <string name="format_humidity">Humidade: <xliff:g id="humidity">%1.0f</xliff:g> %%</string>

    <!-- SyncAdapter related -->
    <string name="sync_account_type">sunshine.example.com</string>
    <string name="content_authority">com.example.android.sunshine.app</string>

    <!-- Notification Format -->
    <string name="format_notification">Previsão: <xliff:g id="condition">%1$s</xliff:g> High: <xliff:g id="high">%2$s</xliff:g> Low: <xliff:g id="low">%3$s</xliff:g></string>

    <!-- Strings related to Notification preference -->

    <!-- Empty Weather Database -->
    <string name="empty_forecast_list_no_network">Previsão de tempo não disponível. Problemas com a conexão com a internet.</string>
    <string name="empty_forecast_list_server_down">Previsão de tempo não disponível. O servidor não retornou as informações.</string>
    <string name="empty_forecast_list_server_error">Previsão de tempo não disponível. O servidor não retornou informações válidas. Verifique se há uma versão atualizada do app.</string>
    <string name="empty_forecast_list_invalid_location">Previsão de tempo não disponível. A localização configurada não é reconhecida pelo sistema.</string>
    <string name="empty_forecast_list">Previsão de tempo não disponível</string>

</resources>